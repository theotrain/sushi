{{!-- <div class="panel panel-{{id}}"> --}}
<div class="panel" data-id="{{id}}">
  <div class="nav prev">
    <img src="/images/nav-prev.png" alt="prev">
  </div>
  <figure>
    <img src="/{{image}}" alt="selected-item">
  </figure>
  <article>
    <a class="close" href="/">+</a>
    <h1>{{name}}</h1>
    <p>{{description}}</p>
    <footer>
      <h2>${{format_price price}}</h2>
      <a class="add_cart" href="#">Add to cart</a>
    </footer>
  </article>
  <aside>
    <h3>Nutritional Information</h3>
    <table>
      <tbody>
        <tr>
          <td>Protein</td>
          <td>{{stats.protein}}</td>
        </tr>
        <tr>
          <td>Fat (total)</td>
          <td>{{stats.fat}}</td>
        </tr>
        <tr>
          <td>Carbohydrate</td>
          <td>{{stats.carbohydrate}}</td>
        </tr>
        <tr>
          <td>Energy (kj)</td>
          <td>{{stats.energy}}</td>
        </tr>
        <tr>
          <td>Energy (kcal)</td>
          <td>{{kj_to_kcal stats.energy}}</td>
        </tr>
        <tr>
          <td>Sugar</td>
          <td>{{stats.sugar}}</td>
        </tr>
      </tbody>
    </table>
  </aside>
  <div class="nav next">
    <img src="/images/nav-next.png" alt="next">
  </div>
</div>